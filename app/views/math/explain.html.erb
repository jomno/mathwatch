<div class="line col-12">
</div>
<div class="col-12 text-center">
  <h3 style="font-weight: bold;">출제 의도</h3>
</div>

<div class="line col-12">
</div>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>구성 요소</th>
        <th>난이도</th>
        <th>내 상태</th>
      </tr>
    </thead>
    <tbody>
      <% @q_units.each do |u| %>
        <tr>
          <td><%=Unit.find(u).name%></td>
          <td><%=@quest.info[u]%></td>
          <td><%=Ulevel.find_by(user_id: current_user.id,unit_id: u).level%></td>
        </tr>
      <% end%>
    </tbody>
  </table>
  <div class="panel panel-default" style="margin-top: 15px;">
    <div class="panel-heading">문제 해설</div>
    <div class="panel-body">
      <img src="<%=asset_path 'a_1.PNG' %>" style="max-width: 100%"></img>
    </div>
  </div>
  <div class="text-right">
    <% if @url == :back %>
      <%= link_to '돌아 가기', @url,class: "btn btn-default" %>
    <% elsif @url == "/math/report" %>
      <%= link_to '분석레포트 가기', @url,class: "btn btn-default" %>
    <% else %>
      <%= link_to '다음 문제 가기', @url,class: "btn btn-default" %>
    <% end %>
  </div>
</div>
